<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="tcc-mysql">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.usjt.tcc.model.User</class>
		<class>br.com.usjt.tcc.model.Address</class>
		<class>br.com.usjt.tcc.model.Owner</class>
		<class>br.com.usjt.tcc.model.Pet</class>
		<class>br.com.usjt.tcc.model.Type</class>
		<class>br.com.usjt.tcc.model.Color</class>
		<class>br.com.usjt.tcc.model.Race</class>
		<class>br.com.usjt.tcc.model.NGO</class>
		<class>br.com.usjt.tcc.model.Company</class>
		<class>br.com.usjt.tcc.model.PetShop</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>